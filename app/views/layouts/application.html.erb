<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport", content="width=devise-width, inicial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="wrap">
          <div class="header-wrap">
              <p class="logo">Bookers</p>
            <ul class="nav navbar-nav">
              <% if user_signed_in? %>
              <li><%= link_to "Home", user_path(current_user.id) %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Books", books_path %></li>
              <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
              <% else %>
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "About", home_about_path %></li>
              <li><%= link_to "sign_up", new_user_registration_path %></li>
              <li><%= link_to "login", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
      </div>
    </div>
    <div class="content">
      <div class="wrap">
        <div class="content-wrap">
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="footer">
      <div class="wrap">
        <div class="footer-wrap">
          <p class="copy-right">CopyRight BookApp.inc</p>
        </div>
      </div>
    </div>
  </body>
</html>
