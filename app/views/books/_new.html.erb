<div class="new_user">
	<h1>New book</h1>
	<%= form_for(book, url: books_path) do |f| %>
		<label class="item", for="book_title">Title</label>
		<%= f.text_field :title, class: "input", id: "book_title" %>
		<label class="item", for="book_opinion">Opinion</label>
		<%= f.text_area :body, class: "input", id: "book_opinion" %>
		<div class="btn-wrap"><%= f.submit "Create Book", class: "btn" %></div>
	<% end %>
</div>